@model List<CartProducts>

<div class="container">
    <h1>SEPETİM</h1>
    <hr />
    <div class="row col-md-12 col-md-offset-2 custyle">
        <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Birim Fiyat</th>
                    <th>Adet</th>
                    <th>Tutar</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td class="text-center">
                </tr>
            }

        </table>
        @if (Model.Count > 0)
        {
            <a class="btn btn-info" asp-controller="Cart" asp-action="FinishShopping" asp-route-id="@ViewBag.CartId">
                Alışverişi Tamamla
            </a>
        }

    </div>
</div>
